html
  head
    title Home Page
  body
    h1 Home Page
    form(action="/submit" method="POST")
      label(for="name") Name:
      input(type="text" name="name" required)
      br
      label(for="age") Age:
      input(type="number" name="age" required)
      br
      button(type="submit") Submit

    if name || age
      h2 Submitted Data:
      p Name: #{name || 'N/A'}
      p Age: #{age || 'N/A'}